[user]
	name = Eugen Blattner
	email = eugen.blattner@mayflower.de

[core]
	autocrlf = input
	editor = vim
	pager = delta

[alias]
	a = add
	b = open
	c = commit
	co = checkout
	d = difftool
	f = fetch
	l = log
	m = merge
	p = pull
	pu = push
	r = remote
	s = status
	sm = submodule
	o = open

[diff]
	guitool = pstorm
	tool = delta

[difftool "pstorm"]
	cmd = pstorm diff "$LOCAL" "$REMOTE"

[difftool "delta"]
	cmd = delta $LOCAL $REMOTE

[difftool]
	prompt = false

[pull]
	rebase = true

[delta]
    features = side-by-side line-numbers decorations
    syntax-theme = Dracula

[delta "decorations"]
    file-style = bold yellow ul
    hunk-header-decoration-style = blue ul

[delta "line-numbers"]
    line-numbers-left-style = blue
    line-numbers-right-style = blue
